{% extends 'texas/base.html.twig' %}

{% block title %}Start Texas Hold'em{% endblock %}

{% block main %}
    <h1>Start Texas Hold'em Game</h1>
    <form method="post" action="{{ path('proj_start') }}">
        <label for="chips">Starting Chips:</label>
        <input type="number" id="chips" name="chips" value="1000" required>
<br>
        <label for="level1">Computer 1 Level:</label>
        <select id="level1" name="level1">
            <option value="normal">Normal</option>
            <option value="intelligent">Intelligent</option>
        </select>
<br>
        <label for="level2">Computer 2 Level:</label>
        <select id="level2" name="level2">
            <option value="normal">Normal</option>
            <option value="intelligent">Intelligent</option>
        </select>
<br><br>
        <button type="submit">Start Game</button>
    </form>
{% endblock %}